{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "lib": ["dom", "es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
